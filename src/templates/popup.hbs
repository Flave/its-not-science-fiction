<div class="map-popup__inner">
  <div class="map-popup__image">
    <img src="/assets/<%= id %>.jpg" />
  </div>
  <div class="map-popup__main">
    <div class="map-popup__name"><%= name %></div>
    <%= description %>
  </div>
</div>
<svg width="<%= svgWidth %>" height="<%= svgHeight %>" style="transform: translate(<%= svgX %>px, <%= svgY %>px);" class="map-popup__line-svg">
  <line class="map-popup__line" x1="<%= lineStartX %>" y1="<%= lineStartY %>" x2="<%= lineEndX %>" y2="<%= lineEndY %>"></line>
</svg>